{
  "lerna": "3.4.3",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useGitVersion": true,
  "gitVersionPrefix": "v",
  "command": {
    "publish": {
      "allowBranch": "develop",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "lerna.json"
  ]
}
